

{% block title %}UserProfile index{% endblock %}

{% block body %}
    <h1>UserProfile index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Password</th>
                <th>ProfileUrl</th>
                <th>Rep</th>
                <th>Access</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_profile in user_profiles %}
            <tr>
                <td>{{ user_profile.id }}</td>
                <td>{{ user_profile.name }}</td>
                <td>{{ user_profile.surname }}</td>
                <td>{{ user_profile.email }}</td>
                <td>{{ user_profile.password }}</td>
                 <td>{{ user_profile.profileUrl }}</td>
                <td>{{ user_profile.rep }}</td>
                <td>{{ user_profile.access }}</td>
                <td>
                    <a href="{{ path('user_profile_show', {'id': user_profile.id}) }}">show</a>
                    <a href="{{ path('user_profile_edit', {'id': user_profile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_profile_new') }}">Create new</a>
{% endblock %}
