

{% block stylesheets %}<link href="{{ asset('css/login.css')}}" rel="stylesheet">{% endblock %}
{% block javascripts %}<script src="{{ asset('js/particles.js')}}"></script>{% endblock %}
{% extends "base.html.twig" %}
{% block title %}Login Page {% endblock %}


{% block body %}
<div id="particles-js">
<div class="login   ">
<h1 style="text-align: center; margin-top:40px;">Welcome!</h1>

    {% if app.user %}
        <div class="mb-3 user" style="text-align:center; ">
            You are logged in as <strong>{{ app.user.username }}</strong>
        </div>
    {% endif %}

    <form class="row d-flex justify-content-center" method="post" >

        {% if error %}
        <div class="alert alert-danger" style="position:absolute;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}




    <div class="form-group  col-8" style="margin-top: 50px">
      <label class="sr-only" for="inlineFormInputGroupUsername">Email</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text border-0 bg-white "><i class="fas fa-envelope"></i></div>
        </div>
          <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control border-0 " id="inlineFormInputGroupUsername" autocomplete="email" placeholder="Email" required autofocus>
      </div>

    </div>
                 <div class="line col-8"></div>
     <div class="form-group  col-8" style="margin-top: 20px">
      <label class="sr-only" for="inlineFormInputGroupUsername">Password</label>
      <div class="input-group  ">
        <div class="input-group-prepend">
          <div class="input-group-text border-0 bg-white"><i class="fas fa-unlock"></i></div>
        </div>
        <input type="password" name="password" id="inputPassword" class="form-control border-0 "  id="inlineFormInputGroupUsername" autocomplete="current-password" placeholder="Password" required>
      </div>
          <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    </div>

             <div class="line col-8"></div>
<div class="container_or">
            <h1 style="text-align: center">OR</h1>
             <div class="left_line"></div>

             <div class="right_line"></div>
</div>
<div class="social_media">

<a class="twitter " href="https://twitter.com/home?lang=en"><i class="fab fa-twitter fa-2x"></i></a>
<a class="instagram " href="https://www.instagram.com/?hl=en"> <i class="fab fa-instagram fa-2x"></i></a>
<a class="facebook " href="https://www.facebook.com/"><i class="fab fa-facebook fa-2x"></i></a>


</div>
    
  <button type="submit" class="btn ">LOGIN</button> 

</form>
  <h3 style="font-size:13px; text-align:center; margin-top:3vh;">Don't have an account <a class="hov " href="register"><strong style="text-decoration:underline">Sign Up Now!</strong></a></h3>
</div>
</div>

</form>

<style>
      @media (max-width: 390px) {
  /* For phone */
  .login{
      background-color: #ffffff ;
      position: absolute;
      z-index: 3;
      height: 80vh;
      width: 90%;
      float: left;
      margin-right: auto;
      margin-left: auto;
      margin-top: 120px;
  }  

.btn{
  width: 40%;
  height: 50px;
  border-radius: 0;
  color: #ffffff;
  margin-top: 0vh;
  background-color: #FB3640;
  
}

.twitter{
  margin-top:-40px;
  margin-left: 10%;

}

.instagram{
    margin-top:-40px;
  margin-left: auto;
  margin-right: auto;
    
}
.facebook{
    margin-top:-40px;
  margin-right: 10%;
}
     
      
}</style>
{% endblock %}





